{
  "name": "vanillabox",
  "version": "0.0.2",
  "description": "A simple, yet attractive vanilla js lightbox gallery",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taverasmisael/vanillabox.git"
  },
  "scripts": {
    "start": "webpack --mode development --watch",
    "prebuild": "npm run lint",
    "build": "webpack --mode production",
    "test": "jest",
    "lint:ts": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:sass": "stylelint src/scss",
    "lint": "npm run lint:sass && npm run lint:ts",
    "prerelease": "test && lint",
    "release": "standard-version",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "doc": "typedoc --out doc src/index.ts"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "keywords": [],
  "author": "Misael Taveras (https://github.com/taverasmisael)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/taverasmisael/vanillabox/issues"
  },
  "homepage": "https://github.com/taverasmisael/vanillabox#readme",
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.44",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0-beta.44",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "@babel/register": "^7.0.0-beta.44",
    "@babel/runtime": "^7.0.0-beta.44",
    "@types/jest": "^22.2.3",
    "autoprefixer": "^8.2.0",
    "babel-loader": "^8.0.0-beta.2",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "jest": "^22.4.3",
    "node-sass": "^4.8.3",
    "postcss-flexbugs-fixes": "^3.3.0",
    "postcss-loader": "^2.1.3",
    "prettier": "^1.12.0",
    "sass-loader": "^7.0.1",
    "standard-version": "^4.3.0",
    "style-loader": "^0.20.3",
    "stylelint": "^9.2.0",
    "stylelint-config-sass-guidelines": "^5.0.0",
    "stylelint-config-standard": "^18.2.0",
    "ts-jest": "^22.4.3",
    "ts-loader": "^4.2.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-loader": "^3.6.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.44",
    "a11y-dialog": "^4.0.1"
  }
}
